  <title>Kuis Edukasi Pertanian</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to bottom right, #8bc34a, #558b2f);
      color: #fff;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 500px;
      margin: 50px auto;
      background: rgba(0,0,0,0.25);
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.3);
    }
    button {
      background: #33691e;
      color: #fff;
      border: none;
      padding: 10px 20px;
      margin: 10px;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.3s;
    }
    button:hover {
      background: #689f38;
    }
    select {
      padding: 8px;
      border-radius: 8px;
      border: none;
      margin-bottom: 20px;
    }
    .leaderboard {
      background: rgba(255,255,255,0.1);
      border-radius: 10px;
      padding: 10px;
      margin-top: 20px;
    }
    h1, h2, h3 {
      margin-bottom: 15px;
    }
  </style>
